post_install()
{
	echo "Please add the 'bna' module to \$MODULES in /etc/mkinitcpio.conf and rebuild your initcpio to complete the installation"
}

post_upgrade()
{
	echo "Please rebuild your initcpio to complete the upgrade"
}

post_remove()
{
	echo "You should also remove the bna module from /etc/mkinitcpio.conf"
}
